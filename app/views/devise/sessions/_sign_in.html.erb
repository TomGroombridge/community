<div class="ui small modal" id="normalUser">
  <i class="close icon"></i>
  <div class="header">
    <h3 style="margin:0px; text-align:center">Sign In</h3>
  </div>
  <div class="content">
    <div class="ui form">
      <%= simple_form_for(:user, :url => user_session_path) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", :placeholder => "Password"  %>
        </div>
        <div class="field" style="text-align:center">
          <%= f.submit "Sign In", :class => "ui positive button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>