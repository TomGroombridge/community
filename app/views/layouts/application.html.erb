<!DOCTYPE html>
<html>
<head>
  <title>CommunityMarketplace</title>
  <%= include_gon(:init => true) %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application", "data-turbolinks-track" => true %>
	<%= tag :meta, :name => "stripe-key", :content => Rails.application.secrets.stripe_public_key %>
  <%= csrf_meta_tags %> 
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>  
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  
</head>
<body>
  <!-- This is the whole sidenav -->
 <div class="ui top attached demo menu">
    <a class="open_item item">
      <i class="sidebar icon"></i>
      Menu
    </a>
    <% if signed_in? %>      
      <%= link_to("<i class='sign in icon'></i>Log out".html_safe, destroy_user_session_path, :method => :delete, :class => "item", :style => "float:right ") %>      
              
      <%= link_to( "<i class='user icon'></i>Dashboard".html_safe, dashboard_path, :class => "item", :style => "float:right") %>      
    <% else %>
      <a class="item" style="float:right">      
        <i class="user icon"></i>
        Sign in 
      </a>
      <a class="item" style="float:right">      
        <i class="sign in icon"></i>
        Sign up
      </a>
    <% end %>
  </div>
<div class="ui bottom attached segment">
    <div class="ui inverted labeled icon left inline vertical sidebar menu" style="width:260px;">
      <a class="open_item item" href="/">
        <i class="home icon"></i>
        Home
      </a>
      <% if signed_in? %>                          
          <%= link_to( "<i class='block layout icon'></i>Dashboard".html_safe , dashboard_path, :class => "open_item") %>          
      <% end %>
      <a class="open_item item" href="/courses">
        <i class="smile icon"></i>
        Courses
      </a>
      <a class="open_item item">
        <i class="calendar icon"></i>
        History
      </a>
    </div>

  <!-- All the content that isnt sidenav is wrapped in the content class -->
    <div class="pusher right-side" style="background:#fafafa">
      <%= yield %>             
    </div>
  </div>
</body>
</html>
