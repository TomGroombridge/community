<!DOCTYPE html>
<html>
<head>
  <title>CommunityMarketplace</title>
  <%= include_gon(:init => true) %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application", "data-turbolinks-track" => true %>
	<%= tag :meta, :name => "stripe-key", :content => Rails.application.secrets.stripe_public_key %>
  <%= csrf_meta_tags %> 
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>  
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  
</head>
<body>
  <!-- This is the whole sidenav -->
 <div class="ui top attached demo menu">
    <a class="item">
      <i class="sidebar icon"></i>
      Menu
    </a>
    <a class="item">
      <i class="sidebar icon"></i>
      Menu
    </a>
  </div>
<div class="ui bottom attached segment">
    <div class="ui inverted labeled icon left inline vertical sidebar menu" style="width:260px;">
      <a class="item" href="/">
        <i class="home icon"></i>
        Home
      </a>
      <% if signed_in? %>                          
          <%= link_to( "<i class='block layout icon'></i>Dashboard".html_safe , dashboard_path, :class => "item") %>          
      <% end %>
      <a class="item" href="/courses">
        <i class="smile icon"></i>
        Courses
      </a>
      <a class="item">
        <i class="calendar icon"></i>
        History
      </a>
    </div>

  <!-- All the content that isnt sidenav is wrapped in the content class -->
    <div class="pusher right-side" style="height:100%;">
      <%= yield %>             
    </div>
  </div>
</body>
</html>
