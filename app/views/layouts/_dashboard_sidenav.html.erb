<div class="dash-sidenav">
	<div class="account">
    <div class=""><%= image_tag @user.avatar_url(:thumb), :class => "profile-pic"%></div>
    <div class="username"><%= @user.company_name %></div>
  </div>
  <div class="ui divider"></div>
   	<h3 class="summary-title">Booking Summary</h3>
  	<table class="ui table month-summary-table">
	  <tbody>
	    <tr>
	      <td>
	        <i class="ticket icon"></i> Tickets sold
	      </td>
	      <td><%= @company_payments.count %></td>
	    </tr>
	    <tr>
	      <td>
	        <i class="pound icon"></i> Dates created
	      </td>
	      <td><%= @all_dates.count  %></td>
	    </tr>
	    <tr>
	      <td>
	        <i class="pound icon"></i> Account Balance
	      </td>
	      <td><%= account_balance(@user)%></td>
	    </tr>
	  </tbody>
	</table>
	<div class="ui inverted yellow button" id="monthlySummaryButton" style="margin: auto; width: 70%; display: block;">Withdraw Funds</div>
	<div class="ui divider"></div>
	<div class="ui list">
		<%# link_to("Transactions", transactions_dashboard_path, :class => "item", :style => "text-align:center; color:white;") %>
		<%# link_to("Bookings", bookings_dashboard_path, :class => "item", :style => "text-align:center; color:white;") %>
		<%= link_to("Edit Company Details", edit_user_path(@user.id), :class => "item", :style => "text-align:center; color:white;") %>
	</div>
</div>