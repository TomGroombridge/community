<div class="ui segment"> 
    <%= form_for @user do |f| %>
        <% %w[x y w h].each do |attribute| %>
            <%# f.text_field "crop_#{attribute}", id: "crop_#{attribute}"%><br> 
            <%= f.hidden_field "crop_#{attribute}" %>
        <% end %>
            <%= f.submit "Save", :class => "ui inverted green button", :style =>"float:right; width:150px"%>
    <% end %>   
    <!-- <div id="cropModal" class="ui inverted blue button" style="float:right; width:150px">Crop</div>     -->
    <%= link_to("Edit Text", edit_user_path(@user.id), :class => "ui inverted orange button", :style =>"float:right; width:150px") %>
</div>
<div class="two column stackable ui grid" style="margin:0px;">
	<div class="column sixteen wide image-banner" style="height:200px; padding:0px">
