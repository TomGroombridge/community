<div class="ui pusher" style="padding-top:10px;">
    <div class="ui special cards" style="margin:0px;">
        <% @courses.each do |course| %>
            <div class="card">
                <div class="image">
                  <%# link_to image_tag(course.avatar_url(:medium)), course_path(course) %>
                  <%# image_tag course.avatar_url(:medium)%>
                  <%= link_to (image_tag course.avatar_url(:medium), :style => "width:100%; vertical-align: top;"), course_path(course) %>
                </div>
                <div class="content">
                  <a class="header"><%= link_to course.name, course_path(course) %></a>
                </div>
                <div class="extra content">
                  <span class="left floated like">
                    <i class="calendar icon"></i>
                    <%= course.upcoming_date.start_date.strftime("%d, %b, %Y") %>
                  </span>
                  <span class="right floated star">
                    <%= number_to_currency(course.price, :precision => 2, :unit => "Â£")  %>
                  </span>
                </div>
            </div>
        <% end %>
    </div>
</div>