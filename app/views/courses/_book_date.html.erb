<div class="ui modal" id="courseDates">
  <i class="close icon"></i>
  <div class="header">
    Profile Picture
  </div>
  <div class="content">    
    <%= form_tag course_tickets_path(@course), id: 'ticket_form' do %>
      <%= select_tag 'dates', options_from_collection_for_select(@course.course_dates, :id, :pretty_date) %>
      Quantity: <%= text_field_tag 'quantity', '1' %>
    <% end %>

    <% @course.course_dates.each do |date|%>    
      <%if date.valid_dates(date)%>   
        <%= date.dates.strftime("%m/%d/%Y/%I:%M%p") %>  
        <% if date.quantity > 0 %>  
          <%= link_to "Book Course", new_payment_path(:id => date.id) %>  
        <% else %>
          <p> sold out</p>
        <% end %>
        <br>    
      <% end %> 
    <% end %>    
  </div>
  <div class="actions">
    <div class="ui black button">
      Nope
    </div>
    <button type='submit' form='ticket_form' class="ui positive right labeled icon button">
      Yep, that's me
      <i class="checkmark icon"></i>
    </button>
  </div>
</div>