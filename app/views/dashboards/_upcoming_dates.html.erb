<h1 class="header" style="margin-bottom: 35px;">Upcoming Dates</h1>
<table class="ui very basic table upcoming-dates-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Revenue</th>
      <th>Sold</th>
      <th style="text-align:center">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @courses.each do |course|%>
  		<% course.upcoming_dates.each do |course_date| %>
		    <tr>
		      <td><%= course.name %></td>
		      <td><%= course_date.select_date%></td>
          <%# raise course_date.revenue.inspect %>
		      <td><%= number_to_currency(course_date.revenue, :precision => 2, :unit => "Â£")  %></td>

          <% if course_date.full == true %>
            <td>Sold Out</td>
          <% else %>
		        <td><%= course_date.tickets_left %></td>
          <% end %>
		      <td style="text-align:center"><%= link_to("Manage".html_safe, course_details_course_course_date_path(course_date.course_id, course_date.id), :class =>"ui inverted red button")%>
		      </td>
		    </tr>
	    <% end %>
	   <% end %>
  </tbody>
</table>
