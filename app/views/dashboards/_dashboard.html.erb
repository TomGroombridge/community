<div class="two column stackable ui grid dashboard">
	<div class="column four wide" style="background:red; height: 500px;">
	</div>
	<div class="column twelve wide">
		<div class="row">
			<h1 class="header">Course Management</h1>
			<h3 class="header sub-heading">Manage your courses and check your event analytics</h3>
		</div>
		<div class="row sections">
			<div class="ui three column stackable grid">
				<div class="column">
					<div class="ui black button">Black</div>
				</div>
				<div class="column">
					<div class="ui black button">Black</div>
				</div>
				<div class="column">
					<div class="ui black button">Black</div>
				</div>
			</div>
			<div class="ui divider"></div>
			<div class="upcoming_dates">
				<table class="ui very basic table upcoming-dates-table">
				  <thead>
				    <tr>
				      <th>Title</th>
				      <th>Date</th>
				      <th>Revenue</th>
				      <th>Sold</th>
				      <th>Actions</th>
				    </tr>
				  </thead>
				  <tbody>
				  	<% @courses.each do |course|%>
				  		<% course.upcoming_dates.each do |course_date| %>
						    <tr>
						      <td><%= course.name %></td>
						      <td><%= course_date.start_date.strftime("%d/%m/%Y")%></td>
						      <td><%= number_to_currency(course_date.revenue, :precision => 2, :unit => "Â£")  %></td>
						      <td><%= course_date.payments.count%>/<%= course_date.quantity %></td>
						      <td><%= link_to("<i class='bar chart icon'></i>".html_safe, course_details_course_course_date_path(course_date.course_id, course_date.id))%></td>
						    </tr>
					    <% end %>
					   <% end %>
				  </tbody>
				</table>
			</div>
		</div>
	</div>
</div>
