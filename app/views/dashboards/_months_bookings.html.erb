<%= link_to 'Download <i class="download icon"></i>'.html_safe, months_bookings_csv_dashboard_path(format: :csv), :class => "ui button " %>
<table class="ui celled table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Contact</th>
    </tr>
  </thead>
  <tbody>
	  <% @monthly_bookings.each do |date| %>
	    <tr>
        <td><%= date.course_date.course.name %><br/> <%= date.course_date.start_date.strftime("%A, %d %b") %></td>
        <td><%= date.booking.name %></td>
        <td><%= date.booking.email %><br/><%= date.booking.contact_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>