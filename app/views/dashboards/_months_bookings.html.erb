<table class="ui celled table">
  <thead>
    <tr>
      <th>Event</th>
      <th>Name</th>
      <th>Contact</th>
    </tr>
  </thead>
  <tbody>
	  <% @monthly_bookings.each do |date| %>
	    <tr>
        <td><%= date.course_date.course.name %><br/> <%= date.course_date.start_date.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <td><%= date.booking.name %></td>
        <td><%= date.booking.email %><br/><%= date.booking.contact_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>