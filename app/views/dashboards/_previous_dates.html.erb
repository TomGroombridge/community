<h1 class="header" style="margin-bottom: 35px;">Previous Dates</h1>
<table class="ui very basic table previous-dates-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Revenue</th>
      <th>Sold</th>
      <th style="text-align:center">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @all_courses.each do |course|%>
  		<% course.previous_dates.each do |course_date| %>
		    <tr>
		      <td><%= course.name %></td>
		      <td><%= course_date.start_date.strftime("%d/%m/%Y")%></td>
		      <td><%= number_to_currency(course_date.revenue, :precision => 2, :unit => "Â£")  %></td>
		      <% if course_date.full%>
            <td>Sold Out</td>
          <% else %>
            <td><%= course_date.payments.count%>/<%= course_date.quantity %></td>
          <% end %>
		      <td style="text-align:center"><%= link_to("Manage".html_safe, course_details_course_course_date_path(course_date.course_id, course_date.id), :class =>"ui inverted red button")%>
		      </td>
		    </tr>
	    <% end %>
	   <% end %>
  </tbody>
</table>
